@{
	ViewData["Title"] = "آپلود ماژول";
	Layout = "_Layout";
}

<form method="post" enctype="multipart/form-data">
	<div class="row">
		<div class="col-lg-12">
			<div class="card">
				<div class="card-header">
					فرم <strong>اضافه کردن ماژول جدید</strong>
				</div>
				<div class="card-body card-block col-lg-12">
					<div class="fileinput fileinput-new input-group col-lg-12" data-provides="fileinput">
						<div class="form-control" data-trigger="fileinput" style="width: 90%;"><i class="glyphicon glyphicon-file fileinput-exists"></i> <span class="fileinput-filename"></span></div>
						<span class="input-group-addon btn btn-default btn-file"><span class="fileinput-new">انتخاب</span><span class="fileinput-exists">تغییر</span><input type="file" name="module" id="module"></span>
						<a href="#" class="input-group-addon btn btn-default fileinput-exists" data-dismiss="fileinput">حذف</a>
					</div>
				</div>
				<div class="card-footer">
					<button type="submit" class="btn btn-success btn-sm">
						<i class="fa fa-upload"></i> ارسال
					</button>
				</div>
			</div>
		</div>

	</div>
</form>